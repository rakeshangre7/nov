    "react-dom": "^18.2.0",
    "sass": "^1.52.3",
    "sass-alias": "^1.0.5",
    "storybook": "^7.2.0",
    "storybook-addon-mock": "^4.1.0",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1",
    "stylelint-order": "^6.0.3",
    "tailwind-variants": "^0.1.4",
    "tailwindcss": "^3.2.7",
    "tailwindcss-themer": "^3.0.1",
    "ts-node": "^9.0.0",
    "typescript": "^5.0.4",
    "yaml-loader": "^0.6.0",
    "yarpm": "^1.2.0"
